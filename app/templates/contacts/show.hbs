{{#if isEditing}}
	{{input value=first name="first" placeholder="Enter First Name"}}
	{{input value=last name="last" placeholder="Enter Last Name"}}
	{{input value=email name="email" placeholder="Enter YourEmail@example.com" type="email"}}
	<button {{ action 'done' }} class="button small">Done</button>
	<button {{ action 'cancel' }} class="button small alert">Cancel</button>
{{else}}
	<h3>{{fullName}}</h3>
	<p>{{email}}</p>
	<button {{ action 'edit' }} class="button small">Edit</button>
{{/if}}
